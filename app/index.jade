html(lang='en', ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width, height=device-height', initial-scale='1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title(ng-bind-template='{{pageTitle}}')
    link(rel='stylesheet', href='css/app.css')
    script.
      window.brunch = window.brunch || {};
      window.brunch['auto-reload'] = {
        enabled: true
      };
    script(src='js/vendor.js')
    script(src='js/partials.js')
    script(src='js/app.js')
  body(ng-controller='AppCtrl')
    .wrapper
      .navbar.navbar-static-top
        .navbar-inner
          a(href='#').brand oDesk
          div(ng-include="'/partials/nav.html'")
      .container.main-content
        div(ng-app='ng-app')
          div(ng-view)
      .push

    script.
      var onDeviceReady = function() {
        angular.element(document).ready(function() {
            angular.bootstrap(document);
        });
      };

      document.addEventListener('deviceready', onDeviceReady, true);